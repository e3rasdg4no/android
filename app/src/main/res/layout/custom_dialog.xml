<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:layout_centerVertical="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/imageView18"
        android:src="@drawable/logowarna"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Menu ini hanya untuk Petani yang sudah di verifikasi\nSilahkan Hubungi Eragano"
        android:gravity="center"
        android:paddingBottom="20dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Hubungi Eragano"
            android:id="@+id/btn_hubungi"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/space7"
            android:layout_toStartOf="@+id/space7"
            android:background="@drawable/button_rounded"
            android:textColor="#ffffff"
            android:layout_marginLeft="10dp" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/space7" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="OK"
            android:id="@+id/btn_ok"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/space7"
            android:layout_toEndOf="@+id/space7"
            android:background="@drawable/button_rounded_abu"
            android:layout_marginRight="10dp" />
    </RelativeLayout>

</LinearLayout>
</RelativeLayout>