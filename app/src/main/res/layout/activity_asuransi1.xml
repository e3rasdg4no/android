<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eragano.eraganoapps.fragment.AsuransiFragment"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_gravity="left|top"
            android:background="@color/hijau">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="PENDAFTARAN ASURANSI (LANGKAH 1)"
                android:id="@+id/textView7"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:textColor="#ffffff"
                android:textSize="16sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="46dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="PROVINSI"
                android:id="@+id/textView13"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/provinsi"
                android:layout_below="@+id/textView13"
                android:layout_alignLeft="@+id/textView13"
                android:layout_alignStart="@+id/textView13"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:maxLines="1"
                android:inputType="text"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="KABUPATEN/KOTA"
                android:id="@+id/textView14"
                android:layout_below="@+id/provinsi"
                android:layout_alignLeft="@+id/provinsi"
                android:layout_alignStart="@+id/provinsi"
                android:layout_marginTop="10dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/kabupaten"
                android:layout_below="@+id/textView14"
                android:layout_alignRight="@+id/provinsi"
                android:layout_alignEnd="@+id/provinsi"
                android:layout_alignLeft="@+id/textView14"
                android:layout_alignStart="@+id/textView14"
                android:maxLines="1"
                android:inputType="text"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="KECAMATAN"
                android:id="@+id/textView15"
                android:layout_below="@+id/kabupaten"
                android:layout_alignLeft="@+id/kabupaten"
                android:layout_alignStart="@+id/kabupaten"
                android:layout_marginTop="10dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/kecamatan"
                android:layout_below="@+id/textView15"
                android:layout_alignRight="@+id/kabupaten"
                android:layout_alignEnd="@+id/kabupaten"
                android:layout_alignLeft="@+id/textView15"
                android:layout_alignStart="@+id/textView15"
                android:maxLines="1"
                android:inputType="text"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="DESA/KELURAHAN"
                android:id="@+id/textView16"
                android:layout_below="@+id/kecamatan"
                android:layout_alignLeft="@+id/kecamatan"
                android:layout_alignStart="@+id/kecamatan" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/desa"
                android:layout_below="@+id/textView16"
                android:layout_alignRight="@+id/kecamatan"
                android:layout_alignEnd="@+id/kecamatan"
                android:layout_alignLeft="@+id/textView16"
                android:layout_alignStart="@+id/textView16"
                android:maxLines="1"
                android:inputType="text"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="KODEPOS"
                android:id="@+id/textView17"
                android:layout_below="@+id/desa"
                android:layout_alignLeft="@+id/desa"
                android:layout_alignStart="@+id/desa"
                android:layout_marginTop="10dp"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/kode_pos"
                android:layout_below="@+id/textView17"
                android:layout_alignRight="@+id/desa"
                android:layout_alignEnd="@+id/desa"
                android:layout_alignLeft="@+id/textView17"
                android:layout_alignStart="@+id/textView17"
                android:maxLines="1"
                android:inputType="number"
                android:textSize="16sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="LANJUTKAN"
                android:id="@+id/lanjutkan"
                android:background="@drawable/button_rounded"
                android:textColor="#ffffff"
                android:layout_below="@+id/kode_pos"
                android:layout_marginTop="40dp"
                android:layout_alignLeft="@+id/kode_pos"
                android:layout_alignStart="@+id/kode_pos"
                android:layout_alignRight="@+id/kode_pos"
                android:layout_alignEnd="@+id/kode_pos" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/lanjutkan"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Butuh Bantuan?"
                android:id="@+id/textView18"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="  HUBUNGI ERAGANO"
                android:id="@+id/textView19"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/textView18"
                android:layout_toEndOf="@+id/textView18" />
            </RelativeLayout>
        </RelativeLayout>

    </FrameLayout>
</RelativeLayout>

</ScrollView>
