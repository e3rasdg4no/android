<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bdcs.hangoutbogor.category.Category2Activity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="800dp">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.eragano.eraganoapps.fragment.AsuransiFragment"
            android:background="#ffffff">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_gravity="left|top"
                    android:background="@color/hijau">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="PENDAFTARAN ASURANSI (LANGKAH 3)"
                        android:id="@+id/textView7"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="850dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="46dp">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="LANJUTKAN"
                        android:id="@+id/lanjutkan"
                        android:background="@drawable/button_rounded"
                        android:textColor="#ffffff"
                        android:layout_marginTop="40dp"
                        android:layout_below="@+id/luas_lahan2"
                        android:layout_alignLeft="@+id/luas_lahan2"
                        android:layout_alignStart="@+id/luas_lahan2"
                        android:layout_alignRight="@+id/luas_lahan2"
                        android:layout_alignEnd="@+id/luas_lahan2" />
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lanjutkan"
                        android:layout_centerHorizontal="true">
                        <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Butuh Bantuan?"
                        android:id="@+id/textView18"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="HUBUNGI ERAGANO"
                            android:id="@+id/textView19"
                            android:textStyle="bold"
                            android:layout_toRightOf="@+id/textView18"
                            android:layout_toEndOf="@+id/textView18"
                            android:layout_marginTop="10dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:background="#f0f0f0"
                        android:layout_marginTop="20dp"
                        android:id="@+id/relativeLayout"
                        android:layout_alignLeft="@+id/textView9"
                        android:layout_alignStart="@+id/textView9"
                        android:layout_alignRight="@+id/dusun"
                        android:layout_alignEnd="@+id/dusun">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="KETERANGAN LAHAN"
                            android:id="@+id/textView8"
                            android:textSize="16sp"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="DUSUN/DESA"
                        android:id="@+id/textView9"
                        android:layout_below="@+id/relativeLahan"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dusun"
                        android:layout_below="@+id/textView9"
                        android:layout_alignLeft="@+id/textView9"
                        android:layout_alignStart="@+id/textView9"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="20dp"
                        android:maxLines="1"
                        android:inputType="text"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="JUMLAH PETAK ALAMI"
                        android:id="@+id/textView20"
                        android:layout_below="@+id/dusun"
                        android:layout_alignLeft="@+id/dusun"
                        android:layout_alignStart="@+id/dusun"
                        android:layout_marginTop="10dp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/jumlah_petak"
                        android:layout_below="@+id/textView20"
                        android:layout_alignRight="@+id/dusun"
                        android:layout_alignEnd="@+id/dusun"
                        android:layout_alignLeft="@+id/textView20"
                        android:layout_alignStart="@+id/textView20"
                        android:maxLines="1"
                        android:inputType="number"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="BATAS UTARA"
                        android:id="@+id/textView21"
                        android:layout_below="@+id/jumlah_petak"
                        android:layout_alignLeft="@+id/jumlah_petak"
                        android:layout_alignStart="@+id/jumlah_petak"
                        android:layout_marginTop="10dp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/batas_utara"
                        android:layout_below="@+id/textView21"
                        android:layout_alignRight="@+id/jumlah_petak"
                        android:layout_alignEnd="@+id/jumlah_petak"
                        android:layout_alignLeft="@+id/textView21"
                        android:layout_alignStart="@+id/textView21"
                        android:maxLines="1"
                        android:inputType="text"
                        android:hint="Nama Pemilik/Penggarap"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="BATAS SELATAN"
                        android:id="@+id/textView22"
                        android:layout_below="@+id/batas_utara"
                        android:layout_alignLeft="@+id/batas_utara"
                        android:layout_alignStart="@+id/batas_utara"
                        android:layout_marginTop="10dp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/batas_selatan"
                        android:layout_below="@+id/textView22"
                        android:layout_alignRight="@+id/batas_utara"
                        android:layout_alignEnd="@+id/batas_utara"
                        android:layout_alignLeft="@+id/textView22"
                        android:layout_alignStart="@+id/textView22"
                        android:maxLines="1"
                        android:inputType="text"
                        android:hint="Nama Pemilik/Penggarap"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="BATAS TIMUR"
                        android:id="@+id/textView23"
                        android:layout_below="@+id/batas_selatan"
                        android:layout_alignLeft="@+id/batas_selatan"
                        android:layout_alignStart="@+id/batas_selatan"
                        android:layout_marginTop="10dp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/batas_timur"
                        android:layout_below="@+id/textView23"
                        android:layout_alignRight="@+id/batas_selatan"
                        android:layout_alignEnd="@+id/batas_selatan"
                        android:layout_alignLeft="@+id/textView23"
                        android:layout_alignStart="@+id/textView23"
                        android:maxLines="1"
                        android:inputType="text"
                        android:hint="Nama Pemilik/Penggarap"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="BATAS BARAT"
                        android:id="@+id/textView24"
                        android:layout_below="@+id/batas_timur"
                        android:layout_alignLeft="@+id/batas_timur"
                        android:layout_alignStart="@+id/batas_timur"
                        android:layout_marginTop="10dp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/batas_barat"
                        android:layout_below="@+id/textView24"
                        android:layout_alignRight="@+id/batas_timur"
                        android:layout_alignEnd="@+id/batas_timur"
                        android:layout_alignLeft="@+id/textView24"
                        android:layout_alignStart="@+id/textView24"
                        android:maxLines="1"
                        android:inputType="text"
                        android:hint="Nama Pemilik/Penggarap"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="LUAS LAHAN (HA)"
                        android:id="@+id/textView25"
                        android:layout_below="@+id/batas_barat"
                        android:layout_alignLeft="@+id/batas_barat"
                        android:layout_alignStart="@+id/batas_barat"
                        android:layout_marginTop="10dp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/luas_lahan2"
                        android:layout_below="@+id/textView25"
                        android:layout_alignRight="@+id/batas_barat"
                        android:layout_alignEnd="@+id/batas_barat"
                        android:layout_alignLeft="@+id/textView25"
                        android:layout_alignStart="@+id/textView25"
                        android:maxLines="1"
                        android:inputType="number"
                        android:textSize="16sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/relativeLayout"
                        android:layout_alignRight="@+id/lanjutkan"
                        android:layout_alignEnd="@+id/lanjutkan"
                        android:layout_alignLeft="@+id/lanjutkan"
                        android:layout_alignStart="@+id/lanjutkan"
                        android:id="@+id/relativeLahan"
                        android:background="#f8f8f8">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="LAHAN 1"
                            android:id="@+id/textView27"
                            android:textSize="16sp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp" />
                    </RelativeLayout>
                </RelativeLayout>

            </FrameLayout>

        </RelativeLayout>

    </RelativeLayout>
</ScrollView>
