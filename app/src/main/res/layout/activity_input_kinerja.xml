<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eragano.eraganoapps.jual.JualActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="900dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_gravity="left|top"
            android:background="@color/hijau"
            android:id="@+id/relativeLayout7"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="PERFORMA PETANI"
                android:id="@+id/textView5"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:textColor="#ffffff"
                android:textSize="16dp" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="NAMA PETANI"
            android:id="@+id/textView35"
            android:layout_below="@+id/relativeLayout7"
            android:layout_alignLeft="@+id/relativeLayout7"
            android:layout_alignStart="@+id/relativeLayout7"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtnamapetani"
            android:maxLines="1"
            android:inputType="text"
            android:layout_below="@+id/textView35"
            android:layout_alignLeft="@+id/textView35"
            android:layout_alignStart="@+id/textView35"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:hint="Masukkan Nama Anda" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="JENIS TANAMAN"
            android:id="@+id/textView49"
            android:layout_below="@+id/txtnamapetani"
            android:layout_alignLeft="@+id/txtnamapetani"
            android:layout_alignStart="@+id/txtnamapetani"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtjenistanaman"
            android:maxLines="1"
            android:inputType="text"
            android:layout_below="@+id/textView49"
            android:layout_alignLeft="@+id/txtnamapetani"
            android:layout_alignStart="@+id/txtnamapetani"
            android:layout_alignRight="@+id/txtnamapetani"
            android:layout_alignEnd="@+id/txtnamapetani"
            android:hint="Tanaman yang anda tanam" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="TANGGAL PELAPORAN"
            android:id="@+id/textView50"
            android:layout_marginTop="10dp"
            android:layout_alignLeft="@+id/txtjenistanaman"
            android:layout_alignStart="@+id/txtjenistanaman"
            android:layout_below="@+id/txtjenistanaman" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txttanggalpelaporan"
            android:maxLines="1"
            android:inputType="number"
            android:layout_below="@+id/textView50"
            android:layout_alignRight="@+id/txtjenistanaman"
            android:layout_alignEnd="@+id/txtjenistanaman"
            android:layout_alignLeft="@+id/textView50"
            android:layout_alignStart="@+id/textView50" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="FOTO TANAMAN / LAHAN"
            android:id="@+id/textView52"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/txttanggalpelaporan"
            android:layout_alignLeft="@+id/txttanggalpelaporan"
            android:layout_alignStart="@+id/txttanggalpelaporan" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/gambarTampung"
            android:src="@drawable/camera"
            android:background="#e9e9e9"
            android:layout_below="@+id/textView55"
            android:layout_alignLeft="@+id/textView55"
            android:layout_alignStart="@+id/textView55"
            android:layout_marginTop="10dp"
            android:padding="50dp"
            android:layout_alignRight="@+id/txttanggalpelaporan"
            android:layout_alignEnd="@+id/txttanggalpelaporan" />

        <Button
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:text="MASUKKAN"
            android:id="@+id/btnmasukkan"
            android:background="@drawable/button_rounded"
            android:textColor="#ffffff"
            android:layout_below="@+id/txtketerangankeadaan"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/btnmasukkan"
            android:layout_centerHorizontal="true"
            android:id="@+id/relativeLayout8">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Butuh Bantuan?"
                android:id="@+id/textView53"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="  HUBUNGI ERAGANO"
                android:id="@+id/textView54"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/textView53"
                android:layout_toEndOf="@+id/textView53" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Tekan Gambar dibawah \nuntuk memasukkan gambar"
            android:id="@+id/textView55"
            android:gravity="center_vertical"
            android:layout_below="@+id/textView52"
            android:layout_alignLeft="@+id/textView52"
            android:layout_alignStart="@+id/textView52"
            android:layout_marginTop="10dp"
            android:textStyle="italic"
            android:textColor="@color/hijau" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="HAMBATAN ATAU MASALAH"
            android:id="@+id/textView56"
            android:layout_below="@+id/gambarTampung"
            android:layout_alignLeft="@+id/gambarTampung"
            android:layout_alignStart="@+id/gambarTampung"
            android:layout_marginTop="10dp" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_hambatan"
            android:layout_below="@+id/textView56"
            android:layout_alignLeft="@+id/textView56"
            android:layout_alignStart="@+id/textView56"
            android:layout_alignRight="@+id/gambarTampung"
            android:layout_alignEnd="@+id/gambarTampung" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="KETERANGAN KEADAAN"
            android:id="@+id/textView168"
            android:layout_below="@+id/spinner_hambatan"
            android:layout_alignLeft="@+id/spinner_hambatan"
            android:layout_alignStart="@+id/spinner_hambatan"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtketerangankeadaan"
            android:maxLines="1"
            android:inputType="number"
            android:layout_below="@+id/textView168"
            android:layout_alignLeft="@+id/textView168"
            android:layout_alignStart="@+id/textView168"
            android:layout_alignRight="@+id/spinner_hambatan"
            android:layout_alignEnd="@+id/spinner_hambatan" />

    </RelativeLayout>
</ScrollView>
