<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.faiz.weatherapp.MainActivity"
    android:background="#ffffff">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_cari"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Masukkan Kota"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="CEK"
        android:id="@+id/btn_cari"
        android:background="@drawable/button_rounded"
        android:textColor="#ffffff"
        android:layout_below="@+id/et_cari"
        android:layout_alignLeft="@+id/et_cari"
        android:layout_alignStart="@+id/et_cari"
        android:layout_alignRight="@+id/et_cari"
        android:layout_alignEnd="@+id/et_cari"
        android:layout_marginBottom="15dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lv_cuaca"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:headerDividersEnabled="true"
        android:layout_below="@+id/btn_cari" />

</RelativeLayout>
