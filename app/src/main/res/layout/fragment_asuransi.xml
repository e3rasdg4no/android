<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eragano.eraganoapps.fragment.AsuransiFragment"
    android:background="#e6e6e6">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_gravity="left|top"
            android:background="#e6c90b">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="KLAIM ASURANSI"
                android:id="@+id/textView7"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:textColor="#ffffff"
                android:textSize="16dp" />
        </RelativeLayout>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_marginTop="60dp"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Pendaftaran Asuransi"
            android:id="@+id/pendaftaran"
            android:layout_alignParentTop="true"
            android:textColor="#5a5a5a"
            android:layout_marginTop="15dp"
            android:textSize="16sp"
            android:layout_alignLeft="@+id/view"
            android:layout_alignStart="@+id/view"
            android:layout_alignRight="@+id/klaim2"
            android:layout_alignEnd="@+id/klaim2" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/abutulisan"
            android:id="@+id/view"
            android:layout_below="@+id/pendaftaran"
            android:layout_alignLeft="@+id/view3"
            android:layout_alignStart="@+id/view3"
            android:layout_marginTop="10dp"
            android:layout_alignRight="@+id/imageklaim"
            android:layout_alignEnd="@+id/imageklaim" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Pengajuan Klaim Asuransi"
            android:id="@+id/klaim2"
            android:layout_below="@+id/view"
            android:layout_marginTop="15dp"
            android:textColor="@color/abutulisan"
            android:layout_alignLeft="@+id/view"
            android:layout_alignStart="@+id/view"
            android:textSize="16sp"
            android:layout_alignRight="@+id/view" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/abutulisan"
            android:id="@+id/view2"
            android:layout_below="@+id/klaim2"
            android:layout_alignRight="@+id/imageklaim"
            android:layout_alignEnd="@+id/imageklaim"
            android:layout_alignLeft="@+id/klaim2"
            android:layout_alignStart="@+id/klaim2"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Rincian Klaim Asuransi"
            android:id="@+id/rincianklaim"
            android:textColor="@color/abutulisan"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_alignBottom="@+id/imageklaim"
            android:layout_alignLeft="@+id/view2"
            android:layout_alignStart="@+id/view2"
            android:layout_alignRight="@+id/klaim2"
            android:layout_alignEnd="@+id/klaim2" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageklaim"
            android:src="@drawable/iconinfo"
            android:layout_below="@+id/view2"
            android:layout_alignRight="@+id/view3"
            android:layout_alignEnd="@+id/view3"
            android:layout_marginTop="8dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/abutulisan"
            android:id="@+id/view3"
            android:layout_below="@+id/imageklaim"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imgklaim"
            android:src="@drawable/iconpengajuan"
            android:layout_below="@+id/view"
            android:layout_alignRight="@+id/view"
            android:layout_alignEnd="@+id/view"
            android:layout_marginTop="8dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imgdaftar"
            android:src="@drawable/iconpendaftaran"
            android:layout_above="@+id/imgklaim"
            android:layout_alignRight="@+id/view"
            android:layout_alignEnd="@+id/view"
            android:layout_marginBottom="8dp" />

    </RelativeLayout>

</RelativeLayout>
