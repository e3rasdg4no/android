<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eragano.eraganoapps.fragment.AsuransiFragment"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="920dp"
        android:background="#ffffff">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/frameLayout">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_gravity="left|top"
                android:background="@color/hijau">
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_gravity="left|top"
                android:background="@color/hijau">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="PENGAJUAN PINJAMAN (LANGKAH 6)"
                    android:id="@+id/textView7"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />

            </RelativeLayout>
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="APABILA PERMOHONAN KREDIT DISETUJUI, MAKA DENGAN INI SAYA/KAMI MENUTUP ASURANSI DAN MENUNJUK NOTARIS SESUAI DIBAWAH INI* "
            android:id="@+id/textView135"
            android:layout_below="@+id/frameLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="20dp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="*isi yang sesuai saja"
            android:id="@+id/textView136"
            android:layout_below="@+id/textView135"
            android:layout_alignLeft="@+id/textView135"
            android:layout_alignStart="@+id/textView135" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="MENUTUP ASURANSI JIWA MELALUI"
            android:id="@+id/textView137"
            android:layout_below="@+id/textView136"
            android:layout_alignLeft="@+id/textView136"
            android:layout_alignStart="@+id/textView136"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pmenutupasuransijiwa"
            android:layout_below="@+id/textView137"
            android:layout_alignLeft="@+id/textView137"
            android:layout_alignStart="@+id/textView137"
            android:layout_alignRight="@+id/textView135"
            android:layout_alignEnd="@+id/textView135"
            android:maxLines="1"
            android:inputType="text"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="MENUTUP ASURANSI KERUGIAN MELALUI"
            android:id="@+id/textView138"
            android:layout_below="@+id/pmenutupasuransijiwa"
            android:layout_alignLeft="@+id/pmenutupasuransijiwa"
            android:layout_alignStart="@+id/pmenutupasuransijiwa"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pmenutupasuransikerugian"
            android:layout_below="@+id/textView138"
            android:layout_alignRight="@+id/pmenutupasuransijiwa"
            android:layout_alignEnd="@+id/pmenutupasuransijiwa"
            android:layout_alignLeft="@+id/textView138"
            android:layout_alignStart="@+id/textView138"
            android:maxLines="1"
            android:inputType="text"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="MENUTUP ASURANSI KREDIT MELALUI"
            android:id="@+id/textView139"
            android:layout_below="@+id/pmenutupasuransikerugian"
            android:layout_alignLeft="@+id/pmenutupasuransikerugian"
            android:layout_alignStart="@+id/pmenutupasuransikerugian"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pmenutupasuransikredit"
            android:layout_below="@+id/textView139"
            android:layout_alignRight="@+id/pmenutupasuransikerugian"
            android:layout_alignEnd="@+id/pmenutupasuransikerugian"
            android:layout_alignLeft="@+id/textView139"
            android:layout_alignStart="@+id/textView139"
            android:maxLines="1"
            android:inputType="text"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="MENGURUS BALIK NAMA/PENGIKATAN AGUNAN ATAU YANG DIPERSYARATKAN BANK MELALUI NOTARIS"
            android:id="@+id/textView140"
            android:layout_below="@+id/pmenutupasuransikredit"
            android:layout_alignLeft="@+id/pmenutupasuransikredit"
            android:layout_alignStart="@+id/pmenutupasuransikredit"
            android:layout_marginTop="10dp"
            android:layout_alignRight="@+id/pmenutupasuransikredit"
            android:layout_alignEnd="@+id/pmenutupasuransikredit" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pbaliknama"
            android:layout_below="@+id/textView140"
            android:layout_alignRight="@+id/pmenutupasuransikredit"
            android:layout_alignEnd="@+id/pmenutupasuransikredit"
            android:layout_alignLeft="@+id/textView140"
            android:layout_alignStart="@+id/textView140"
            android:maxLines="1"
            android:inputType="text"
            android:textSize="16sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f0f0f0"
            android:id="@+id/relativeLayout16"
            android:layout_below="@+id/pbaliknama"
            android:layout_alignLeft="@+id/pbaliknama"
            android:layout_alignStart="@+id/pbaliknama"
            android:layout_alignRight="@+id/pbaliknama"
            android:layout_alignEnd="@+id/pbaliknama">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox2"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:checked="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="DENGAN INI SAYA/KAMI MEMAHAMI SEGALA RESIKO YANG TIMBUL ATAS PENUNJUKAN PERUSAHAAN ASURANSI DAN NOTARIS DI ATAS DAN MEMBEBASKAN BANK MANDIRI DARI SEGALA TUNTUTAN/GUGATAN DARI PIHAK MANAPUN TERKAIT DENGAN PENUNJUKAN ASURANSI DAN NOTARIS TERSEBUT DIATAS"
                android:id="@+id/textView141"
                android:layout_toRightOf="@+id/checkBox2"
                android:layout_toEndOf="@+id/checkBox2"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="TANDA TANGAN CALON DEBITUR"
            android:id="@+id/textView142"
            android:layout_below="@+id/relativeLayout16"
            android:layout_alignLeft="@+id/relativeLayout16"
            android:layout_alignStart="@+id/relativeLayout16"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pttd"
            android:layout_below="@+id/textView142"
            android:layout_alignRight="@+id/relativeLayout16"
            android:layout_alignEnd="@+id/relativeLayout16"
            android:layout_alignLeft="@+id/textView142"
            android:layout_alignStart="@+id/textView142"
            android:maxLines="1"
            android:inputType="text"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="TANDA TANGAN SUAMI/ISTRI"
            android:id="@+id/textView143"
            android:layout_below="@+id/pttd"
            android:layout_alignLeft="@+id/pttd"
            android:layout_alignStart="@+id/pttd"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pttd2"
            android:layout_below="@+id/textView143"
            android:layout_alignRight="@+id/pttd"
            android:layout_alignEnd="@+id/pttd"
            android:layout_alignLeft="@+id/textView143"
            android:layout_alignStart="@+id/textView143"
            android:maxLines="1"
            android:inputType="text"
            android:textSize="16sp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="LANJUTKAN"
            android:id="@+id/lanjutkan"
            android:background="@drawable/button_rounded"
            android:textColor="#ffffff"
            android:layout_below="@+id/pttd2"
            android:layout_marginTop="40dp"
            android:layout_alignLeft="@+id/pttd2"
            android:layout_alignStart="@+id/pttd2"
            android:layout_alignRight="@+id/pttd2"
            android:layout_alignEnd="@+id/pttd2" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/lanjutkan"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Butuh Bantuan?"
                android:id="@+id/textView144"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="  HUBUNGI ERAGANO"
                android:id="@+id/textView145"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/textView144"
                android:layout_toEndOf="@+id/textView144" />
        </RelativeLayout>

    </RelativeLayout>
    </ScrollView>