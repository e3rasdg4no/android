<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eragano.eraganoapps.fragment.AsuransiFragment"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="800dp"
        android:background="#ffffff">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/frameLayout">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_gravity="left|top"
                android:background="@color/hijau">
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_gravity="left|top"
                android:background="@color/hijau">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="PENGAJUAN PINJAMAN (LANGKAH 3)"
                    android:id="@+id/textView7"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />

            </RelativeLayout>
        </FrameLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#e4e4e4"
            android:id="@+id/relativeLayout14"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/frameLayout"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="DATA CALON DEBITUR"
                android:id="@+id/textView71"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#f5f5f5"
            android:id="@+id/relativeLayout15"
            android:layout_below="@+id/relativeLayout14"
            android:layout_alignLeft="@+id/relativeLayout14"
            android:layout_alignStart="@+id/relativeLayout14"
            android:layout_alignRight="@+id/relativeLayout14"
            android:layout_alignEnd="@+id/relativeLayout14">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="DATA SUAMI/ISTRI"
                android:id="@+id/textView70"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="* wajib diisi"
            android:id="@+id/textView97"
            android:layout_below="@+id/relativeLayout15"
            android:layout_alignLeft="@+id/relativeLayout15"
            android:layout_alignStart="@+id/relativeLayout15"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="NAMA SUAMI/ISTRI *"
            android:id="@+id/textView98"
            android:layout_below="@+id/textView97"
            android:layout_alignLeft="@+id/textView97"
            android:layout_alignStart="@+id/textView97"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pnamasuamiistri"
            android:layout_below="@+id/textView98"
            android:layout_alignLeft="@+id/textView98"
            android:layout_alignStart="@+id/textView98"
            android:layout_alignRight="@+id/relativeLayout15"
            android:layout_alignEnd="@+id/relativeLayout15"
            android:maxLines="1"
            android:inputType="text"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="TEMPAT LAHIR *"
            android:id="@+id/textView99"
            android:layout_below="@+id/pnamasuamiistri"
            android:layout_alignLeft="@+id/pnamasuamiistri"
            android:layout_alignStart="@+id/pnamasuamiistri"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ptempatlahir2"
            android:layout_below="@+id/textView99"
            android:layout_alignLeft="@+id/textView99"
            android:layout_alignStart="@+id/textView99"
            android:layout_alignRight="@+id/pnamasuamiistri"
            android:layout_alignEnd="@+id/pnamasuamiistri"
            android:maxLines="1"
            android:inputType="text"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="TANGGAL LAHIR *"
            android:id="@+id/textView100"
            android:layout_below="@+id/ptempatlahir2"
            android:layout_alignLeft="@+id/ptempatlahir2"
            android:layout_alignStart="@+id/ptempatlahir2"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ptanggallahir2"
            android:layout_below="@+id/textView100"
            android:layout_alignRight="@+id/ptempatlahir2"
            android:layout_alignEnd="@+id/ptempatlahir2"
            android:layout_alignLeft="@+id/textView100"
            android:layout_alignStart="@+id/textView100"
            android:inputType="date"
            android:maxLines="1"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="PENDIDIKAN\nTERAKHIR *"
            android:id="@+id/textView101"
            android:layout_below="@+id/ptanggallahir2"
            android:layout_alignLeft="@+id/ptanggallahir2"
            android:layout_alignStart="@+id/ptanggallahir2"
            android:layout_marginTop="10dp" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerpendidikan2"
            android:layout_alignTop="@+id/textView101"
            android:layout_alignRight="@+id/ptanggallahir2"
            android:layout_alignEnd="@+id/ptanggallahir2"
            android:layout_toEndOf="@+id/textView101"
            android:layout_toRightOf="@+id/textView101"
            android:layout_marginLeft="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="PEKERJAAN SUAMI/ISTRI *"
            android:id="@+id/textView102"
            android:layout_below="@+id/spinnerpendidikan2"
            android:layout_alignLeft="@+id/textView101"
            android:layout_alignStart="@+id/textView101"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ppekerjaan"
            android:layout_below="@+id/textView102"
            android:layout_alignLeft="@+id/textView102"
            android:layout_alignStart="@+id/textView102"
            android:layout_alignRight="@+id/spinnerpendidikan2"
            android:layout_alignEnd="@+id/spinnerpendidikan2"
            android:maxLines="1"
            android:inputType="text"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="PENGHASILAN BULANAN SUAMI/ISTRI (RP) *"
            android:id="@+id/textView103"
            android:layout_below="@+id/ppekerjaan"
            android:layout_alignLeft="@+id/ppekerjaan"
            android:layout_alignStart="@+id/ppekerjaan"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ppenghasilan"
            android:layout_below="@+id/textView103"
            android:layout_alignLeft="@+id/textView103"
            android:layout_alignStart="@+id/textView103"
            android:layout_alignRight="@+id/ppekerjaan"
            android:layout_alignEnd="@+id/ppekerjaan"
            android:inputType="number"
            android:maxLines="1"
            android:textSize="16sp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="LANJUTKAN"
            android:id="@+id/lanjutkan"
            android:background="@drawable/button_rounded"
            android:textColor="#ffffff"
            android:layout_below="@+id/ppenghasilan"
            android:layout_marginTop="40dp"
            android:layout_alignLeft="@+id/ppenghasilan"
            android:layout_alignStart="@+id/ppenghasilan"
            android:layout_alignRight="@+id/ppenghasilan"
            android:layout_alignEnd="@+id/ppenghasilan" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/lanjutkan"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Butuh Bantuan?"
                android:id="@+id/textView104"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="  HUBUNGI ERAGANO"
                android:id="@+id/textView105"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/textView104"
                android:layout_toEndOf="@+id/textView104" />
        </RelativeLayout>

    </RelativeLayout>
    </ScrollView>