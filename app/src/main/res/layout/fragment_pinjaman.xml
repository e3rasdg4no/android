<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eragano.eraganoapps.fragment.PinjamanFragment"
    android:background="#e6e6e6">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_gravity="left|top"
        android:background="#e6c90b"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout13">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="PINJAMAN LUNAK"
            android:id="@+id/textView62"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Pengajuan Pinjaman Lunak"
            android:id="@+id/pengajuan"
            android:textColor="#5a5a5a"
            android:textSize="16sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_toLeftOf="@+id/pengajuan2"
            android:layout_toStartOf="@+id/pengajuan2" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:id="@+id/pengajuan2"
            android:src="@drawable/iconpengajuan"
            android:paddingTop="8dp"
            android:paddingBottom="7dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/abutulisan"
            android:id="@+id/view3"
            android:layout_below="@+id/rincian2"
            android:layout_alignLeft="@+id/rincian"
            android:layout_alignStart="@+id/rincian"
            android:layout_alignRight="@+id/view2"
            android:layout_alignEnd="@+id/view2"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Rincian Pengajuan"
            android:id="@+id/rincian"
            android:textColor="#5a5a5a"
            android:textSize="16dp"
            android:layout_below="@+id/view2"
            android:layout_alignLeft="@+id/view2"
            android:layout_alignStart="@+id/view2"
            android:layout_marginTop="15dp"
            android:layout_toLeftOf="@+id/rincian2"
            android:layout_toStartOf="@+id/rincian2" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:id="@+id/rincian2"
            android:src="@drawable/iconinfo"
            android:paddingTop="8dp"
            android:paddingBottom="7dp"
            android:layout_below="@+id/pengajuan2"
            android:layout_alignRight="@+id/view2"
            android:layout_alignEnd="@+id/view2" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/abutulisan"
            android:id="@+id/view2"
            android:layout_alignBottom="@+id/pengajuan2"
            android:layout_alignLeft="@+id/pengajuan"
            android:layout_alignStart="@+id/pengajuan"
            android:layout_alignRight="@+id/pengajuan2"
            android:layout_alignEnd="@+id/pengajuan2" />

    </RelativeLayout>
</RelativeLayout>
