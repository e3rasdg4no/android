<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bdcs.hangoutbogor.category.Category2Activity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1200dp">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.eragano.eraganoapps.fragment.AsuransiFragment"
            android:background="#ffffff">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_gravity="left|top"
                    android:background="@color/hijau">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="PENDAFTARAN ASURANSI (LANGKAH 4)"
                        android:id="@+id/textView7"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="#ffffff"
                        android:textSize="16dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1200dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="46dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:background="#f0f0f0"
                        android:layout_marginTop="20dp"
                        android:id="@+id/relativeLayout"
                        android:layout_alignLeft="@+id/textView9"
                        android:layout_alignStart="@+id/textView9"
                        android:layout_alignRight="@+id/luas_petak1"
                        android:layout_alignEnd="@+id/luas_petak1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="PERINCIAN LAHAN PER PETANI"
                            android:id="@+id/textView8"
                            android:textSize="16sp"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="LUAS PETAK ALAMI 1 (HA)"
                        android:id="@+id/textView9"
                        android:layout_below="@+id/relativeLahan"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/luas_petak1"
                        android:layout_below="@+id/textView9"
                        android:layout_alignLeft="@+id/textView9"
                        android:layout_alignStart="@+id/textView9"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="20dp"
                        android:maxLines="1"
                        android:inputType="number"
                        android:textSize="16sp"  />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="LUAS PETAK ALAMI 2 (HA)"
                        android:id="@+id/textView20"
                        android:layout_below="@+id/luas_petak1"
                        android:layout_alignLeft="@+id/luas_petak1"
                        android:layout_alignStart="@+id/luas_petak1"
                        android:layout_marginTop="10dp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/luas_petak2"
                        android:layout_below="@+id/textView20"
                        android:layout_alignRight="@+id/luas_petak1"
                        android:layout_alignEnd="@+id/luas_petak1"
                        android:layout_alignLeft="@+id/textView20"
                        android:layout_alignStart="@+id/textView20"
                        android:maxLines="1"
                        android:inputType="number"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="LUAS PETAK ALAMI 3 (HA)"
                        android:id="@+id/textView21"
                        android:layout_below="@+id/luas_petak2"
                        android:layout_alignLeft="@+id/luas_petak2"
                        android:layout_alignStart="@+id/luas_petak2"
                        android:layout_marginTop="10dp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/luas_petak3"
                        android:layout_below="@+id/textView21"
                        android:layout_alignRight="@+id/luas_petak2"
                        android:layout_alignEnd="@+id/luas_petak2"
                        android:layout_alignLeft="@+id/textView21"
                        android:layout_alignStart="@+id/textView21"
                        android:maxLines="1"
                        android:inputType="number"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="LUAS PETAK ALAMI 4 (HA)"
                        android:id="@+id/textView22"
                        android:layout_below="@+id/luas_petak3"
                        android:layout_alignLeft="@+id/luas_petak3"
                        android:layout_alignStart="@+id/luas_petak3"
                        android:layout_marginTop="10dp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/luas_petak4"
                        android:layout_below="@+id/textView22"
                        android:layout_alignRight="@+id/luas_petak3"
                        android:layout_alignEnd="@+id/luas_petak3"
                        android:layout_alignLeft="@+id/textView22"
                        android:layout_alignStart="@+id/textView22"
                        android:maxLines="1"
                        android:inputType="number"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="LUAS PETAK ALAMI 5 (HA)"
                        android:id="@+id/textView23"
                        android:layout_below="@+id/luas_petak4"
                        android:layout_alignLeft="@+id/luas_petak4"
                        android:layout_alignStart="@+id/luas_petak4"
                        android:layout_marginTop="10dp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/luas_petak5"
                        android:layout_below="@+id/textView23"
                        android:layout_alignRight="@+id/luas_petak4"
                        android:layout_alignEnd="@+id/luas_petak4"
                        android:layout_alignLeft="@+id/textView23"
                        android:layout_alignStart="@+id/textView23"
                        android:maxLines="1"
                        android:inputType="number"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="LUAS PETAK ALAMI 6 (HA)"
                        android:id="@+id/textView24"
                        android:layout_below="@+id/luas_petak5"
                        android:layout_alignLeft="@+id/luas_petak5"
                        android:layout_alignStart="@+id/luas_petak5"
                        android:layout_marginTop="10dp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/luas_petak6"
                        android:layout_below="@+id/textView24"
                        android:layout_alignRight="@+id/luas_petak5"
                        android:layout_alignEnd="@+id/luas_petak5"
                        android:layout_alignLeft="@+id/textView24"
                        android:layout_alignStart="@+id/textView24"
                        android:maxLines="1"
                        android:inputType="number"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="LUAS PETAK ALAMI 7 (HA)"
                        android:id="@+id/textView25"
                        android:layout_below="@+id/luas_petak6"
                        android:layout_alignLeft="@+id/luas_petak6"
                        android:layout_alignStart="@+id/luas_petak6"
                        android:layout_marginTop="10dp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/luas_petak7"
                        android:layout_below="@+id/textView25"
                        android:layout_alignRight="@+id/luas_petak6"
                        android:layout_alignEnd="@+id/luas_petak6"
                        android:layout_alignLeft="@+id/textView25"
                        android:layout_alignStart="@+id/textView25"
                        android:maxLines="1"
                        android:inputType="number"
                        android:textSize="16sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/relativeLayout"
                        android:id="@+id/relativeLahan"
                        android:background="#f8f8f8"
                        android:layout_alignRight="@+id/luas_petak7"
                        android:layout_alignEnd="@+id/luas_petak7"
                        android:layout_alignLeft="@+id/luas_petak7"
                        android:layout_alignStart="@+id/luas_petak7">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="LAHAN 1"
                            android:id="@+id/textView27"
                            android:textSize="16dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="LUAS PETAK ALAMI 8 (HA)"
                        android:id="@+id/textView28"
                        android:layout_below="@+id/luas_petak7"
                        android:layout_alignLeft="@+id/luas_petak7"
                        android:layout_alignStart="@+id/luas_petak7"
                        android:layout_marginTop="10dp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/luas_petak8"
                        android:maxLines="1"
                        android:inputType="number"
                        android:layout_below="@+id/textView28"
                        android:layout_alignRight="@+id/luas_petak7"
                        android:layout_alignEnd="@+id/luas_petak7"
                        android:layout_alignLeft="@+id/textView28"
                        android:layout_alignStart="@+id/textView28"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="KETERANGAN"
                        android:id="@+id/textView29"
                        android:layout_below="@+id/luas_petak8"
                        android:layout_alignLeft="@+id/luas_petak8"
                        android:layout_alignStart="@+id/luas_petak8"
                        android:layout_marginTop="10dp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/keterangan"
                        android:maxLines="1"
                        android:inputType="text"
                        android:layout_below="@+id/textView29"
                        android:layout_alignRight="@+id/luas_petak8"
                        android:layout_alignEnd="@+id/luas_petak8"
                        android:layout_alignLeft="@+id/textView29"
                        android:layout_alignStart="@+id/textView29"
                        android:textSize="16sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#f8f8f8"
                        android:id="@+id/relativeLayout2"
                        android:layout_below="@+id/keterangan"
                        android:layout_alignLeft="@+id/keterangan"
                        android:layout_alignStart="@+id/keterangan"
                        android:layout_alignRight="@+id/keterangan"
                        android:layout_alignEnd="@+id/keterangan">

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/checkBox"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:checked="false" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="DENGAN INI SAYA MENYATAKAN BAHWA KETERANGAN YANG TELAH DIMASUKKAN ADALAH BENAR"
                            android:id="@+id/textView32"
                            android:layout_toRightOf="@+id/checkBox"
                            android:layout_toEndOf="@+id/checkBox"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="TANDA TANGAN"
                        android:id="@+id/textView33"
                        android:layout_below="@+id/relativeLayout2"
                        android:layout_alignLeft="@+id/relativeLayout2"
                        android:layout_alignStart="@+id/relativeLayout2"
                        android:layout_marginTop="10dp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tanda_tangan"
                        android:maxLines="1"
                        android:inputType="text"
                        android:layout_below="@+id/textView33"
                        android:layout_alignRight="@+id/relativeLayout2"
                        android:layout_alignEnd="@+id/relativeLayout2"
                        android:layout_alignLeft="@+id/textView33"
                        android:layout_alignStart="@+id/textView33"
                        android:hint="Masukkan nama anda sebagai tanda tangan"
                        android:textSize="16sp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="LANJUTKAN"
                        android:id="@+id/lanjutkan"
                        android:background="@drawable/button_rounded"
                        android:textColor="#ffffff"
                        android:layout_below="@+id/tanda_tangan"
                        android:layout_marginTop="40dp"
                        android:layout_alignLeft="@+id/tanda_tangan"
                        android:layout_alignStart="@+id/tanda_tangan"
                        android:layout_alignRight="@+id/tanda_tangan"
                        android:layout_alignEnd="@+id/tanda_tangan" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lanjutkan"
                        android:layout_centerHorizontal="true">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Butuh Bantuan?"
                            android:id="@+id/textView18"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="HUBUNGI ERAGANO"
                            android:id="@+id/textView19"
                            android:textStyle="bold"
                            android:layout_toRightOf="@+id/textView18"
                            android:layout_toEndOf="@+id/textView18"
                            android:layout_marginTop="10dp" />
                    </RelativeLayout>
                </RelativeLayout>

            </FrameLayout>

        </RelativeLayout>

    </RelativeLayout>
