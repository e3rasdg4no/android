<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/img_artikel"
        android:src="@drawable/kentang"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="14.20 WIB - 29 April 2016"
        android:id="@+id/txt_date"
        android:textSize="11sp"
        android:textColor="@color/hijau"
        android:gravity="center"
        android:layout_below="@+id/img_artikel"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Teknik Budidaya Wortel"
        android:id="@+id/txt_judul"
        android:gravity="center"
        android:textSize="24dp"
        android:layout_alignParentStart="true"
        android:textColor="@color/hijau"
        android:layout_below="@+id/txt_date"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Teknik Budidaya"
        android:id="@+id/txt_kategori"
        android:textColor="#464646"
        android:layout_below="@+id/txt_judul"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageView26"
        android:src="@drawable/ic_seemore"
        android:layout_below="@+id/txt_kategori"
        android:layout_centerHorizontal="true" />

</RelativeLayout>