<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/abudasar">

    <ImageButton
        android:layout_width="@dimen/menu_burger"
        android:layout_height="@dimen/menu_burger"
        android:background="@android:color/transparent"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:contentDescription="@string/app_name"
        android:src="@drawable/menufix"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingBottom="5dp"
        android:paddingRight="12dp"
        android:paddingTop="8dp"
        android:paddingLeft="8dp"
        android:id="@+id/drawer"
        android:layout_marginLeft="-8dp" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:contentDescription="@string/app_name"
        android:src="@drawable/logowarna"
        android:id="@+id/imageView8"
        android:paddingTop="5dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@android:color/transparent"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:contentDescription="@string/app_name"
        android:src="@drawable/bantuanfix"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingBottom="5dp"
        android:paddingRight="12dp"
        android:paddingTop="8dp"
        android:id="@+id/hub"
        android:paddingLeft="8dp" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@android:color/transparent"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:contentDescription="@string/app_name"
        android:src="@drawable/iconcart"
        android:paddingBottom="5dp"
        android:paddingTop="8dp"
        android:paddingLeft="8dp"
        android:id="@+id/imageButton"
        android:layout_alignTop="@+id/imageView8"
        android:layout_toLeftOf="@+id/hub"
        android:layout_toStartOf="@+id/hub"
        android:layout_marginRight="-8dp" />

</RelativeLayout>