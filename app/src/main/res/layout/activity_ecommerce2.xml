<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ecommerce.Ecommerce2Activity"
    android:background="#ffffff"
    android:id="@+id/scroll">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="600dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/image_produk"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/tomat"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Zat protektin hewani haram makro dan mikro Stone F"
        android:id="@+id/title_produk"
        android:layout_below="@+id/image_produk"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="(500 gr)"
        android:id="@+id/ukuran"
        android:layout_below="@+id/title_produk"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Rp. 185.000/gr"
        android:id="@+id/hargaproduk"
        android:layout_below="@+id/ukuran"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#626262"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hargaproduk"
        android:layout_centerHorizontal="true"
        android:background="@color/abudasar"
        android:layout_marginTop="5dp"
        android:id="@+id/relativeLayout19">

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/space4"
            android:layout_marginTop="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="ANJURAN PAKAI"
            android:id="@+id/aturan"
            android:textAlignment="center"
            android:layout_toRightOf="@+id/space4"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:textColor="@color/abutulisan" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="4dp"
            android:background="@color/hijau"
            android:id="@+id/view"
            android:layout_below="@+id/aturan"
            android:layout_alignLeft="@+id/aturan"
            android:layout_alignStart="@+id/aturan" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="4dp"
            android:background="@color/hijau"
            android:id="@+id/view2"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/deskripsi_pakai"
            android:layout_alignRight="@+id/deskripsi_pakai"
            android:layout_alignEnd="@+id/deskripsi_pakai" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="DESKRIPSI PAKAI"
            android:id="@+id/deskripsi_pakai"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/abutulisan"
            android:layout_alignBottom="@+id/aturan"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/space4"
            android:layout_toStartOf="@+id/space4" />
    </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Benih Tomat Unggulan Aura Toti F1. Buah yang dihasilkan Segar, Merah, dan Manis"
            android:id="@+id/deskripsi"
            android:layout_below="@+id/relativeLayout19"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:textColor="#000000" />

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="-"
            android:id="@+id/btn_minus"
            android:background="@drawable/button_circle"
            android:textColor="#ffffff"
            android:layout_below="@+id/deskripsi"
            android:layout_toLeftOf="@+id/jumlah_produk"
            android:layout_toStartOf="@+id/jumlah_produk"
            android:layout_marginRight="20dp"
            android:textSize="20sp" />

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="+"
            android:id="@+id/btn_tambah"
            android:background="@drawable/button_circle"
            android:textColor="#ffffff"
            android:layout_below="@+id/deskripsi"
            android:layout_toRightOf="@+id/jumlah_produk"
            android:layout_toEndOf="@+id/jumlah_produk"
            android:layout_marginLeft="20dp"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="5"
            android:id="@+id/jumlah_produk"
            android:layout_below="@+id/deskripsi"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:gravity="center" />

        <Button
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:text="Beli"
            android:id="@+id/btn_beli"
            android:background="@drawable/button_beli"
            android:textColor="#ffffff"
            android:layout_below="@+id/btn_minus"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/space5"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/space5"
            android:layout_marginTop="20dp" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_alignTop="@+id/btn_beli"
            android:layout_toRightOf="@+id/btn_minus"
            android:layout_toEndOf="@+id/btn_minus"
            android:id="@+id/space5" />

        <Button
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:text="Kembali Ke Katalog"
            android:id="@+id/btn_kembali"
            android:background="@drawable/button_rounded"
            android:textColor="#ffffff"
            android:layout_alignTop="@+id/space5"
            android:layout_toRightOf="@+id/space5"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp" />
    </RelativeLayout>
</ScrollView>
